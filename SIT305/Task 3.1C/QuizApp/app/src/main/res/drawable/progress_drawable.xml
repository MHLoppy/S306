<?xml version="1.0" encoding="utf-8"?>
<!--adapted from Eyal Biran and other contributors https://stackoverflow.com/a/42646939/16367940-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp"/>
            <solid android:color="@color/offwhite"/>
            <stroke android:width="2dp" android:color="@color/customgrey" />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"/>
                <gradient
                    android:angle="-90"
                    android:startColor="@color/customgrey"
                    android:endColor="@color/customgreydarker" />
            </shape>
        </scale>
    </item>
</layer-list>
